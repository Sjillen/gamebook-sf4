{% extends "base.html.twig" %}

{% block body %}

    <div class="row">
        <div class="col-sm-4 ol-sm-offset-4">
            {{ chapter.title }}
        </div>

        <div class="col-sm-10 col-sm-offset-1">
            {{ chapter.textContent }}

            {% for choice in chapter.choices %}
                <a href="{{ path('chapter', {'idStory': chapter.story.id, "idChapter": choice.targetChapter.id}) }}">
                    <button>{{ choice.description }}</button>
                </a>
            {%  endfor %}
        </div>

                <a href="{{ path('story', {"id": chapter.story.id}) }}"><button class="btn btn-secondary">back to story page</button></a>

    </div>

{% endblock %}