{% extends "base.html.twig" %}

{% block main %}
    <div class="form-container container">
        <div class="row">
            <div class="col s10 offset-s1 m8 offset-m2 white">
                <div class="row">
                    <div class="col s12">
                        <h3 class="center-align">Create a new Story</h3>
                    </div>
                </div>
                {{ form_start(form) }}
                <div class="row">
                    <div class="col s12 m6 offset-m3 center-align">
                        {{ form_label(form.title) }}
                        {{ form_widget(form.title, {"attr": {"class": "center-align"}}) }}
                        {{ form_errors(form.title) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col s12 m6 offset-m3 center-align">
                        {{ form_label(form.author) }}
                        {{ form_widget(form.author, {"attr": {"class": "center-align"}}) }}
                        {{ form_errors(form.author) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col s12 m8 offset-m2 center-align">
                        {{ form_label(form.summary) }}
                        {{ form_widget(form.summary) }}
                        {{ form_errors(form.summary) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col s12 center-align">
                        <a role="button" href="{{ path('editor_index') }}" onclick="window.history.go(-1); return false" class="waves-effect waves-light btn amber btn-large"><i class="material-icons left">first_page</i>Cancel</a>
                        <button type="submit" class ="waves-effect waves-light btn btn-large"><i class="material-icons right">gavel</i>Create</button>
                    </div>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>





{% endblock %}