{% extends "base.html.twig" %}

{% block main %}
<div class="well">


    {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
    <div class="row align-items-center">
        <div class="form-group col-sm-10 col-sm-offset-1">
            {{ form_label(form.name, "What is the name of your hero", {'label_attr': {'class': 'col-sm-4 col-sm-offset-4 control-label'}}) }}
            {{ form_errors(form.name) }}
            <div class="col-sm-10">
                {{ form_widget(form.name, {'attr': {'class' : 'form-control'}}) }}
            </div>
        </div>

        <div class="form-group">
            {{ form_label(form.skills, "Choose your skills", {'label_attr': {'class': 'col-sm-4 col-sm-offset-4 control-label'}}) }}
            {{ form_errors(form.skills) }}

            <div class="col-sm-12">
                {{ form_widget(form.skills, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
    </div>

    {{ form_row(form.save) }}


    {{ form_end(form) }}
</div>
{% endblock %}