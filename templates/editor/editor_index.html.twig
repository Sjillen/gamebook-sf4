{% extends "base.html.twig" %}

{% block title %}{{ parent() }} - Editor{% endblock %}

{% block main %}
    <div class="container">
        <div class="row">
            <div class="col s12 m10 offset-m1">
                <h2 class="center-align blue-text text-lighten-4">Welcome to the Gamebook Editor</h2>
                <div class="row">
                    <div class="col s12 center-align">
                        <a href="{{ path('story_add') }}" role="button" class="waves-effect waves-light btn-large blue darken-1">Create a new story
                            <i class="material-icons right">edit</i>
                        </a>
                    </div>
                </div>
                <div class="row stories-card-container">
                    {% for story in stories %}
                    <div class="col s6 card-item">
                        <div class="card hoverable">
                            <div class="card-image">
                                <img src="{{ asset('build/images/mystic_book_by_adalbertofsouza-d2xvmui.b8e02752.jpg') }}">
                                <span class="card-title">{{ story.title }}</span>
                                <a href="{{ path('editor_story', {'slug': story.slug}) }}" class="btn-floating halfway-fab waves-effect waves-light amber darken-1">
                                    <i class="material-icons">add</i>
                                </a>
                            </div>
                            <div class="card-content">
                                <p>{{ story.summary|truncate(100, true) }}</p>
                            </div>
                            <div class="card-action story-action-card">
                                <div class="story-author-card">
                                    <p>{{ story.author }}</p>
                                </div>
                                <div class="publish-button-card">
                                    {% if story.isPublished %}
                                        <a role="button" class="btn waves-effect waves-light amber darken-3" href="{{ path('story_publish', {"slug": story.slug}) }}">
                                            <i class="material-icons right">flag</i>
                                            Unpublish
                                        </a>
                                    {% else %}
                                        <a role="button" class="btn waves-effect waves-light green darken-3" href="{{ path('story_publish', {"slug": story.slug}) }}">
                                            <i class="material-icons right">publish</i>
                                            Publish
                                        </a>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                    </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}